<% content_for :content do %>

    <div class="container">
      <p id="notice"><%= notice %></p>

      <h3><%= @article.title %></h3>
      <p><%= @article.content %></p>
      <small><%= @article.author %></small>

      <%= link_to 'Edit', edit_article_path(@article) %> |
      <%= link_to 'Back', articles_path %>
    </div>

<% end %>